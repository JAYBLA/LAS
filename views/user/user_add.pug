extends ../layout

block content
	.container
		.row
			div.alert.alert-success User / Add
	br
	h3#title.text-center User Add
	hr
	br
	.container#form
		form(action="/adduser" method="POST" name="user_add_form")
			label(for="firstName") First Name
			.form-group
				input#firstName_input.form-control(type="text" placeholder="Enter First Name" name="first_name")
			label(for="lastName") Last Name
			.form-group
				input#lastName_input.form-control(type="text" placeholder="Enter Last Name" name="last_name")
			label(for="userName") UserName
			.form-group
				input#username_input.form-control(type="text" placeholder="Enter UserName" name="username")
			label(for="status") Status
			.form-group
				input#status_input.form-control(type="number" placeholder="Enter Status Number To refer" name="status_number")
				small#status_input_small.form-text.text-muted 1: Active , 2: Inactive
			.form-group
				button.btn.btn-primary(type="submit") ADD USER