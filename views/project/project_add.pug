extends ../layout

block content
	.container
		.row
			div.alert.alert-success Project / Add
	br
	h3#title.text-center Project Add
	hr
	br
	.container#form
		form(action="/projectadd" method="POST" name="project_add_form")
			label(for="project_name_input") Project Name
			.form-group
				input#project_name_input.form-control(type="text" placeholder="Project Name" name="project_name" required)
				small#emailHelp.form-text.text-muted Enter Unique Project Name
			label(for="status") Status
			.form-group
				input#status_input.form-control(type="number" placeholder="Enter Status Number To refer" name="status_number" required)
				small#status_input_small.form-text.text-muted 1: Active , 2: Inactive
			.form-group
				button.btn.btn-primary(type="submit") ADD PROJECT
