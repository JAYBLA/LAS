extends ../layout

block content
	.container
		.row
			div.alert.alert-primary Project / Edit
	br
	h3#titleEdit.text-center Project Edit
	hr
	br
	.container#form
		form(action="/project/edit/"+ projectData.id method="POST" name="plot_edit_form")
			label(for="project_name_input") Project Name
			.form-group
				input#project_name_input.form-control(type="text" name="project_name" value=projectData.projectName required) 
			label(for="status") Status
			.form-group
				input#status_input.form-control(type="number" name="status_number" value=projectData.statusId required)
				small#status_input_small.form-text.text-muted 1: Active , 2: Inactive
			.form-group
				button.btn.btn-primary(type="submit") UPDATE PROJECT
